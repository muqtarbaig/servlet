<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="log-path">D:\project\servlet\src\main\webapp\config\logs</Property>
    </Properties> 

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ABSOLUTE} [%t] %-5p %c{1} - %m%n"/>
        </Console>
 
